@model CourseWork.Models.Fund

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

    <div class="container mt-5">
        <h2 class="text-center">Удаление фонда</h2>
        <h3 class="text-center">Вы уверены что хотитите удалить данный фонд?</h3>
        <dl class="dl-horizontal">
            <dt>
                Название
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                Цель
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GoalAmount)
            </dd>

            <dt>
                Текущая сумма
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CollectedAmount)
            </dd>

            <dt>
                Информация
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Info)
            </dd>

            <dt>
                Логотип
            </dt>

            <dd>
                <img src="~/images/@Model.LogoName" style="width: 100px;" />
            </dd>

        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a href="/Admin/Index" style="text-decoration: none"><span class="btn btn-outline-danger">Отмена</span></a>
            </div>
        }
    </div>
    


